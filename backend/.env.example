# Application
APP_NAME="TabletsV2 ERP"
DEBUG=True

# Database
# Option 1: SQLite (Quick setup - no PostgreSQL installation required)
DATABASE_URL="sqlite+aiosqlite:///./tabletsv2.db"

# Option 2: PostgreSQL (Production-ready, requires PostgreSQL installed)
# DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/tabletsv2"

# JWT - IMPORTANT: Generate a secure secret key
# Use: openssl rand -hex 32
JWT_SECRET_KEY="your-secret-key-here-generate-with-openssl-rand-hex-32"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Rate Limiting
LOGIN_RATE_LIMIT_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=60

# Phone validation
DEFAULT_COUNTRY_CODE="+964"
